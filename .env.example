# Primary API key for OpenAI used by the backend
OPENAI_API_KEY=sk-************************************************

# Default LLM model and optional list of allowed models
LLM_MODEL=gpt-4.1
LLM_MODELS=gpt-4.1,gpt-4.1-mini,gpt-4o-mini

# Control how many tool-call loops the backend attempts (max 12)
CHAT_MAX_ITERATIONS=8

# Optional per-token pricing used for cost tracking (USD)
PROMPT_TOKEN_COST_USD=0.000005
COMPLETION_TOKEN_COST_USD=0.000015

# LAN host/IP used for URLs (frontend/backend integration)
CHATAPP_HOST=192.168.14.55

# Frontend consumes the API at this URL (change to LAN IP for multi-device)
VITE_CHATAPI_URL=http://192.168.14.55:4025
VITE_KEYCLOAK_ENABLED=true
VITE_KEYCLOAK_URL=http://192.168.14.55:8080
VITE_KEYCLOAK_REALM=garden
VITE_KEYCLOAK_CLIENT_ID=chatapp-frontend
VITE_KEYCLOAK_SILENT_CHECK_SSO=http://192.168.14.55:4225/silent-check-sso.html
VITE_CHAT_STREAMING=true

# Restrict API access to specific IPs (comma-separated)
# In development, use '*' to allow all (defaulted in code/compose)
ALLOWED_IPS=*
# Optionally expose public endpoints (comma-separated patterns, supports method prefix)
AUTH_PUBLIC_PATHS=GET /health,GET /mcp/tools,GET /sessions,GET /sessions/*,GET /metrics/cost,POST /chat,POST /chat/stream
