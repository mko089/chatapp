{
  "$schema": "https://example.local/schemas/mcp.config.schema.json",
  "servers": [
    {
      "id": "meters",
      "transport": "stdio",
      "command": "../../metersapp/apps/meters-mcp/run.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "METERS_API_URL": "http://192.168.14.55:3003"
      },
      "allowedTools": [
        "meters_health",
        "meters_metrics",
        "meters_list_meters",
        "meters_list_readings",
        "meters_daily_consumption",
        "meters_list_departments",
        "meters_list_locations"
      ],
      "defaultTimeoutMs": 15000
    },
    {
      "id": "employee",
      "transport": "stdio",
      "command": "./scripts/run-employee-mcp.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "EMPLOYEE_API_URL": "http://192.168.14.55:4004",
        "EMPLOYEE_API_TOKEN": "",
        "NODE_BIN_OVERRIDE": "node"
      },
      "blockedTools": [
        "*_create_*",
        "*_update_*",
        "*_delete_*",
        "*_upsert_*",
        "*_patch_*"
      ],
      "defaultTimeoutMs": 20000
    },
    {
      "id": "fincost",
      "transport": "stdio",
      "command": "./scripts/run-fincost-mcp.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "FINCOST_API_URL": "http://192.168.14.55:3011",
        "FINCOST_API_KEY": "dev-secret-key",
        "NODE_BIN_OVERRIDE": "node"
      },
      "blockedTools": [
        "*_add_*",
        "*_update_*",
        "*_delete_*",
        "*_full_payoff*"
      ],
      "defaultTimeoutMs": 20000
    },
    {
      "id": "garden",
      "transport": "stdio",
      "command": "./scripts/run-garden-mcp.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "GARDEN_API_URL": "http://192.168.14.55:3016",
        "GARDEN_ROLE": "admin",
        "NODE_BIN_OVERRIDE": "node"
      },
      "blockedTools": [
        "*_delete_*",
        "*_update_*",
        "*_create_*"
      ],
      "defaultTimeoutMs": 20000
    },
    {
      "id": "posbistro",
      "transport": "stdio",
      "command": "../../posbistroapi/apps/posbistro-mcp/run.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "API_BASE": "http://192.168.14.55:3005",
        "NODE_BIN_OVERRIDE": "node"
      },
      "blockedTools": [
        "*_delete_*",
        "*_update_*",
        "*_create_*"
      ],
      "defaultTimeoutMs": 20000
    },
    {
      "id": "keycloak",
      "transport": "stdio",
      "command": "../../keycloak-mcp/run.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "KC_BASE_URL": "http://192.168.14.55:8080",
        "KC_USERNAME": "admin",
        "KC_PASSWORD": "",
        "KC_TOKEN_REALM": "master",
        "NODE_BIN_OVERRIDE": "node"
      },
      "blockedTools": [
        "*_delete_*",
        "*_update_*",
        "*_create_*"
      ],
      "defaultTimeoutMs": 20000
    }
  ]
}
