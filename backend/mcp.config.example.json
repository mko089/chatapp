{
  "$schema": "https://example.local/schemas/mcp.config.schema.json",
  "servers": [
    {
      "id": "meters",
      "transport": "stdio",
      "command": "../../metersapp/apps/meters-mcp/run.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "METERS_API_URL": "http://192.168.14.55:3003"
      },
      "allowedTools": [
        "meters_health",
        "meters_metrics",
        "meters_list_meters",
        "meters_list_readings",
        "meters_daily_consumption",
        "meters_list_departments",
        "meters_list_locations"
      ],
      "defaultTimeoutMs": 15000
    },
    {
      "id": "employee",
      "transport": "stdio",
      "command": "./scripts/run-employee-mcp.sh",
      "args": [],
      "env": {
        "NODE_ENV": "production",
        "EMPLOYEE_API_URL": "http://192.168.14.55:4004",
        "EMPLOYEE_API_TOKEN": "",
        "NODE_BIN_OVERRIDE": "node"
      },
      "blockedTools": [
        "*_create_*",
        "*_update_*",
        "*_delete_*",
        "*_upsert_*",
        "*_patch_*"
      ],
      "defaultTimeoutMs": 20000
    }
  ]
}
